<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.tautua.maven.plugins.sass</groupId>
    <artifactId>sass-maven-plugin-test</artifactId>
    <packaging>maven-plugin</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>sass-maven-plugin Maven Mojo Test</name>
    <url>http://maven.apache.org</url>
    <build>
        <plugins>
            <plugin>
                <groupId>org.tautua.maven.plugins.sass</groupId>
                <artifactId>sass-maven-plugin</artifactId>
                <configuration>
                    <jrubyOptions>
                        <gems>
                            <gem>sass:3.5.1</gem>
                            <gem>susy</gem>
                        </gems>
                    </jrubyOptions>
                    <sassOptions>
                        <input>src/test/sass</input>
                        <output>target/generated-test-sources/css</output>
                        <style>COMPRESSED</style>
                    </sassOptions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
